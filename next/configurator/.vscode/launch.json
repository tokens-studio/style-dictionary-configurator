  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test current file",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest",
      "args": [
        "--config=./jest.config.ts",
        "--coverage=false",
        "--testPathPattern=${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal"
    }
  ]
}